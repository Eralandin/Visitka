@{
    ViewData["Title"] = "Панель администратора";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <div class="container py-4">
        <h2 class="mb-4">@ViewData["Title"]</h2>

        <div class="d-flex mb-3">
            <button id="btnPortfolio" class="btn btn-primary me-2">Портфолио</button>
            <button id="btnPrices" class="btn btn-secondary me-2">Цены</button>
            <button id="btnRequests" class="btn btn-info me-2">Заявки</button>
            <form method="post" action="/admin/logout" class="ms-auto">
                <button type="submit" class="btn btn-danger">Выход</button>
            </form>
        </div>

        <div id="tableContainer"></div>
    </div>

    <!-- JQuery и Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function loadTable(url) {
            $.ajax({
                url: url,
                type: 'POST',
                success: function (data) {
                    $("#tableContainer").html(data);
                },
                error: function (xhr, status, error) {
                    console.error("Ошибка загрузки таблицы:", status, error);
                }
            });
        }

                $(document).ready(function () {
            // Определяем вкладку по переменной tab из сервера или по умолчанию "portfolio"
            var tab = '@(Context.Request.Query["tab"].ToString() ?? "portfolio")';

            // Загружаем таблицу в зависимости от вкладки
            if (tab === "portfolio") {
                loadTable("/admin/portfolio");
            } else if (tab === "prices") {
                loadTable("/admin/prices");
            } else if (tab === "requests") {
                loadTable("/admin/requests");
            }else{
                loadTable("/admin/portfolio");
            }

            // Обработчики кнопок
            $("#btnPortfolio").click(function () { loadTable("/admin/portfolio"); });
            $("#btnPrices").click(function () { loadTable("/admin/prices"); });
            $("#btnRequests").click(function () { loadTable("/admin/requests"); });
        });

    </script>

</body>
</html>
